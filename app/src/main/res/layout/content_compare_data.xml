<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="?attr/actionBarSize">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/compare_card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:padding="10dp">

                <TextView
                    android:id="@+id/compare_image_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="캐릭터 이미지"
                    android:textColor="@color/colorSecondaryDark"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/job_image_a"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/portrait_phantom"
                    app:layout_constraintEnd_toStartOf="@+id/job_image_b"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/compare_image_info_title" />

                <ImageView
                    android:id="@+id/job_image_b"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:src="@drawable/portrait_phantom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/job_image_a"
                    app:layout_constraintTop_toTopOf="@+id/job_image_a" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/compare_card_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/compare_card_1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:padding="10dp">

                <TextView
                    android:id="@+id/compare_basic_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기본 정보"
                    android:textColor="@color/colorSecondaryDark"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/card_2_center"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/compare_basic_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="주스탯"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="@+id/compare_basic_info_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_basic_info_title" />

                <TextView
                    android:id="@+id/compare_basic_status_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEX"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_2_center"
                    app:layout_constraintStart_toStartOf="@+id/compare_basic_status_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_basic_status_title" />

                <TextView
                    android:id="@+id/compare_basic_status_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="LUK"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_2_center"
                    app:layout_constraintTop_toTopOf="@+id/compare_basic_status_a" />

                <TextView
                    android:id="@+id/compare_basic_mweapon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="주무기"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="@+id/compare_basic_info_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_basic_status_a" />

                <TextView
                    android:id="@+id/compare_basic_mweapon_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_2_center"
                    app:layout_constraintStart_toStartOf="@+id/compare_basic_mweapon_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_basic_mweapon_title" />

                <TextView
                    android:id="@+id/compare_basic_mweapon_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="케인"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_2_center"
                    app:layout_constraintTop_toTopOf="@+id/compare_basic_mweapon_a" />

                <TextView
                    android:id="@+id/compare_basic_sweapon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="보조무기"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="@+id/compare_basic_info_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_basic_mweapon_a" />

                <TextView
                    android:id="@+id/compare_basic_sweapon_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보석"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_2_center"
                    app:layout_constraintStart_toStartOf="@+id/compare_basic_sweapon_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_basic_sweapon_title" />

                <TextView
                    android:id="@+id/compare_basic_sweapon_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="카르트"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_2_center"
                    app:layout_constraintTop_toTopOf="@+id/compare_basic_sweapon_a" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/compare_card_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/compare_card_2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:padding="10dp">

                <TextView
                    android:id="@+id/compare_stat_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="능력치"
                    android:textColor="@color/colorSecondaryDark"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/card_3_center"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/compare_stat_attack_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="공격력"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="@+id/compare_stat_info_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_stat_info_title" />

                <TextView
                    android:id="@+id/compare_stat_attack_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_3_center"
                    app:layout_constraintStart_toStartOf="@+id/compare_stat_attack_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_stat_attack_title" />

                <TextView
                    android:id="@+id/compare_stat_attack_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="3"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_3_center"
                    app:layout_constraintTop_toTopOf="@+id/compare_stat_attack_a" />

                <TextView
                    android:id="@+id/compare_stat_movement_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="기동성"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="@+id/compare_stat_info_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_stat_attack_a" />

                <TextView
                    android:id="@+id/compare_stat_movement_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_3_center"
                    app:layout_constraintStart_toStartOf="@+id/compare_stat_movement_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_stat_movement_title" />

                <TextView
                    android:id="@+id/compare_stat_movement_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="5"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_3_center"
                    app:layout_constraintTop_toTopOf="@+id/compare_stat_movement_a" />

                <TextView
                    android:id="@+id/compare_stat_difficult_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="난이도"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="@+id/compare_stat_info_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_stat_movement_a" />

                <TextView
                    android:id="@+id/compare_stat_difficult_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_3_center"
                    app:layout_constraintStart_toStartOf="@+id/compare_stat_difficult_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_stat_difficult_title" />

                <TextView
                    android:id="@+id/compare_stat_difficult_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="4"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_3_center"
                    app:layout_constraintTop_toTopOf="@+id/compare_stat_difficult_a" />

                <TextView
                    android:id="@+id/compare_stat_defense_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="방어력"
                    android:textColor="@color/colorSecondary"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="@+id/compare_stat_info_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_stat_difficult_a" />

                <TextView
                    android:id="@+id/compare_stat_defense_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toStartOf="@+id/card_3_center"
                    app:layout_constraintStart_toStartOf="@+id/compare_stat_defense_title"
                    app:layout_constraintTop_toBottomOf="@+id/compare_stat_defense_title" />

                <TextView
                    android:id="@+id/compare_stat_defense_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="3"
                    android:textColor="@color/colorSecondary"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/card_3_center"
                    app:layout_constraintTop_toTopOf="@+id/compare_stat_defense_a" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>