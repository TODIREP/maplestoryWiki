<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/skills_icon_image"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/heros_of_maple"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/skills_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="메이플 용사"
            android:textColor="@color/colorSecondary"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/skills_icon_image"
            app:layout_constraintTop_toTopOf="@+id/skills_icon_image" />

        <TextView
            android:id="@+id/skills_max_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="최고 레벨 : 30"
            android:textColor="@color/colorSecondaryLight"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/skills_icon_image"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
