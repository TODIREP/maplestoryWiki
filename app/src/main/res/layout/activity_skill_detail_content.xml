<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondaryOnText"
    app:cardCornerRadius="15dp"
    tools:context=".home.subpage.skills.SkillDetailContent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/skill_detail_view_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_button_x_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/skill_detail_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스킬명"
            android:textColor="@color/colorSecondary"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/skill_detail_view_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/heros_of_maple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skill_detail_view_name" />

        <TextView
            android:id="@+id/skill_detail_view_max_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="[마스터레벨 : 30]"
            android:textColor="@color/colorSecondaryLight"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/skill_detail_view_icon"
            app:layout_constraintTop_toTopOf="@+id/skill_detail_view_icon" />

        <TextView
            android:id="@+id/skill_detail_view_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="일정 시간 동안 파티원의 모든 능력치를 일정 퍼센트만큼 증가시켜 준다. 메이플 용사, 시그너스 나이츠, 노바의 용사, 레프의 용사, 이계의 용사, 아니마의 용사, 륀느의 가호는 중첩되지 않는다."
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/skill_detail_view_max_level"
            app:layout_constraintTop_toBottomOf="@+id/skill_detail_view_max_level" />

        <View
            android:id="@+id/skill_detail_view_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorSecondary"
            app:layout_constraintTop_toBottomOf="@+id/skill_detail_view_content" />

        <TextView
            android:id="@+id/skill_detail_view_current_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="[현재 레벨 30]"
            android:textColor="@color/colorSecondaryLight"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skill_detail_view_bar" />

        <TextView
            android:id="@+id/skill_detail_view_effect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MP 70 소비, 900초 동안 AP를 직접 투자한 모든 능력치 15%씩 증가"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/skill_detail_view_current_level" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>